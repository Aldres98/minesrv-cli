{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "lib": ["ES6", "ES2015", "ESNext"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "importHelpers": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "templates"
  ]
}
